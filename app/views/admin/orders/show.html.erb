<h1 class="m-4">注文履歴詳細</h1>

<div class="m-4">

  <div class="d-flex m-2 text-left">
    <div class="w-25 text-left">購入者</div>
    <div class="w-25 text-left"><%= link_to @order.customer.family_name + @order.customer.first_name, admin_customer_path(@order.id) %></div>
  </div>

  <div class="d-flex m-2 text-left">
    <div class="w-25 text-left">注文日</div>
    <div class="w-25 text-left"><%= @order.created_at.strftime("%Y/%m/%d %H:%M") %></div>
  </div>

  <div class="d-flex m-2 text-left">
    <div class="w-25 text-left">配送先</div>
    <div class="w-25 text-left"><%= @order.postal_code%><%= @order.address %></div>
    <div class="w-25 text-left"><%= @order.name %></div>
  </div>

  <div class="d-flex m-2 text-left">
    <div class="w-25 text-left">支払い方法</div>
    <div class="w-25 text-left"><%= @order.status %></div>
  </div>

  <div class="d-flex m-2 text-left">
    <div class="w-25 text-left">注文ステータス</div>
    <div class="w-25 text-left">
      <%= form_with model: @order, url:admin_order_path(@order), method: :patch do |f| %>
        <%= f.select :status, Order.order_statuses.keys.to_a %>
        <%= f.submit "更新", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

  <table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
      <th><br></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.item.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.amount * order_detail.item.price %></td>
        <td>
          <%= form_with model: @order_detail, url:admin_order_details_path(order_detail), method: :patch do |f| %>
              <%= f.select :making_status, OrderDetail.making_statuses.keys.to_a %>
              <%= f.submit '更新',class:"btn btn-success" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



</div>
