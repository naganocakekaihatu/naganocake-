<h1>商品追加</h1>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました。
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @item, url: admin_items_path do |f| %>
  <p>
    <%= f.label :商品画像 %><br>
    <%= f.file_field :image, accept: "image/*" %>
  </p>
  
  <p>
    <%= f.label :ジャンル %><br>
    <%= f.collection_select :genre_id, @genres, :id, :name, prompt: '-' %>
  </p>
  
  <p>
    <%= f.label :商品名 %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :税抜価格 %><br>
    <%= f.text_field :price %>円
  </p>
  
  <p>
    <%= f.label :商品説明文 %><br>
    <%= f.text_area :introduction %>
  </p>
  
  <p>  
    <%= f.label :販売ステータス %><br>
    <%= f.check_box :is_active, checked_value: true, unchecked_value: false %>
    <%= f.label :販売中 %>
  </p>
  
  <%= f.submit "作成" %>
  
<% end %>