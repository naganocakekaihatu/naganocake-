<%= flash[:notice] %>

<h1>商品詳細</h1>
<p><%= link_to "商品一覧へ", admin_items_path %></p>
<p>
  <% if @item.image.attached? %>
    <%= image_tag @item.image, size:"200x200" %>
  <% else %>
    <%= image_tag "no-image", size:"200x200" %>
  <% end %>  
</p>
<p><%= @item.genre.name %></p>
<p><%= @item.name %></p>
<p><%= @item.price %>円</p>
<% if @item.is_active %>
  <p>販売中</p>
<% else %>
  <p>販売停止</p>
<% end %>
</p>
<p><%= @item.introduction %></p>
<p>作成日時<%= @item.created_at %></p>
<p>更新日時<%= @item.updated_at %></p>

<%= link_to "編集", edit_admin_item_path(@item.id) %>
/
<%= link_to "削除", admin_item_path(@item.id), method: :delete %>