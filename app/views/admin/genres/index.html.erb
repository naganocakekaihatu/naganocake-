<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました。
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>ジャンル作成</h1>

<div>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name %>
    
    <%= f.submit "作成" %>
  <% end %>
</div>

<h1>ジャンル一覧</h1>
<table>
  <thead>
    <tr>
      <th>ジャンル名/</th>
      <th>作成日時/</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %>/</td>
        <td><%= genre.created_at %>/</td>
        <td><%= genre.updated_at %>/</td>
        <td><%= link_to "編集", edit_admin_genre_path(genre.id) %>/</td>
        <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  