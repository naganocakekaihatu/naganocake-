<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました。
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
   <h4 class="p-3 d-inline-block" style="background-color: #CCCCCC; margin-bottom: 40px;">
     ジャンル一覧・追加
   </h4>
</div>

  <%= form_with model: @genre, url: admin_genres_path, class: "d-flex justify-content-between" do |f| %>
  <div class="d-flex">
   <div class="form-group  ml-5">
     <h4 class="text-left  mt-2 mb-2">
      <%= f.label :ジャンル名 %>
     </h4>
   </div>
   <div class="form-group ml-5">
    <%= f.text_field :name, class: "btn-lg", style: "width: 300px;" %>
   </div>
   <div class="form-group ml-5">
    <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
   </div>
  </div>
  <% end %>
</div>

<div class="container" style="float: left;">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th class="text-left">ジャンル名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><h3><%= genre.name %></h3></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success", style: "width: 100px; margin-right: 30px;" %>
              <%= link_to "削除", admin_genre_path(genre.id), method: :delete, data: {"data-confirm" => "本当に削除しますか？"} , class: "btn btn-danger", style: "width: 100px;" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  