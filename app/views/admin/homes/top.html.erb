<h2>注文一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |oder| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(oder.id) %></td>
        <td><%= order.customer.last_name + order.customer.first_name %></td>
        <td><%= order.customer.email %></td>
        <td>
          <%= oder.satus %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>