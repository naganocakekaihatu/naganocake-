<h2>注文一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order.id) %></td>
        <td><%= order.customer.family_name + order.customer.first_name %></td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td>
          <%= I18n.t("enums.order.status.#{order.status}") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>