
<div class="alert alert-info">
  <%= flash[:notice] %>
</div>

<h2>注文履歴一覧</h2>

<div class="container">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center">注文日</th>
        <th class="text-center">配送先</th>
        <th class="text-center">支払金額（商品合計＋送料）</th>
        <th class="text-center">支払金額</th>
        <th class="text-center">注文ステータス</th>
        <th class="text-center">注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td class="text-center"><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td class="text-center"><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td class="text-center"><%= order.cart_items.sum(:quantity) %></td>
        <td class="text-center">
          <%= form_with model: order, url: admin_order_path(order), method: :patch do |f| %>
            <%= f.select :order_status, Order.order_statuses, class: "form-control" %>
            <!--%= f.submit "更新", class: "btn btn-primary" %>-->
          <% end %>
        </td>
        <td class="text-center"><%= order.total_fee %></td>
        <td class="text-center"><%= order.order_status %></td>
        <td class="text-center"><%= link_to "注文詳細", public_order_path(order) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h1 class="text-center">注文確定処理（注文）</h1>
  <p class="text-center">Find me in app/views/orders/index.html.erb</p>
</div>