<h1>商品一覧</h1>

<table>
  <% @items.each do |item| %>
    <tr>
      <td>
        <% if item.image.attached? %>
          <%= image_tag item.image, size:"100x100" %>
        <% else %>
          <%= image_tag "no-image", size:"100x100" %>
        <% end %>  
        <br><%= link_to item.name, item_path(item) %>
      </td>
      <td><%= item.price %>円</td>
      <td>
        <% if item.is_active %>
          <販売中>
        <% else %>
          <販売停止>
        <% end %>
      </td>
    </tr>
  <% end %>  
</table>
