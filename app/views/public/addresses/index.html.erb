<h1>配送先登録・一覧ページ</h1>
  <%= form_for @address, url:addresses_path, method: :post do |f| %>
      <div>
        <%= f.label :郵便番号 %>
      </div>
      <div>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
      <div>
        <%= f.label :住所 %>
      </div>
      <div>
        <%= f.text_field :address, autofocus: true, autocomplete: "address"%>
      </div>
      <div>
        <%= f.label :宛名 %>
      </div>
      <div>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div>
      <%= f.submit "登録する", class:"btn btn-primary" %>
      </div>
  <% end %>
  
  <h1>登録情報</h1>
  
<table>
    <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
            <%= link_to "編集する", edit_address_path(address),method: :get  %>　　
            <%= link_to '削除する', address_path(address), method: :delete, data: { confirm: "削除しますか？" } %>
        </td>
    </tr>
<% end %>
</table>
<p>Find me in app/views/addresses/index.html.erb</p>
