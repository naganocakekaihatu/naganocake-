<h1 class="text-center">配送先登録・一覧ページ</h1>
<%= form_for @address, url: addresses_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code, class: "form-control", autofocus: true, autocomplete: "postal_code" %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "address" %>
  </div>
  <div class="form-group">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
  </div>
  <div class="text-center">
    <%= f.submit "登録する", class: "btn btn-primary" %>
  </div>
<% end %>

<h1 class="text-center mt-4">登録情報</h1>

<table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">郵便番号</th>
      <th scope="col">住所</th>
      <th scope="col">宛名</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address), method: :get, class: "btn btn-info" %>
          <%= link_to '削除する', address_path(address), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p class="text-center">Find me in app/views/addresses/index.html.erb</p>