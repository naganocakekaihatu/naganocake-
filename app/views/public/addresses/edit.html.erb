<h1 class="text-center">配送先編集</h1>
<%= form_for @address, url: address_path(@address), method: :patch do |f| %>

<div class="form-group">
 <%= f.label :postal_code, "郵便番号" %>
 <div class="col-sm-2">
 <%= f.text_field :postal_code, class: "form-control", autofocus: true, autocomplete: "postal_code" %>
 </div>
</div>

<div class="form-group">
  <%= f.label :address, "住所" %>
  <div class="col-sm-7">
  <%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "address" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :name, "宛名" %>
  <div class="col-sm-2">
  <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
  </div>
</div>

<div class="text-center">
<%= f.submit "変更内容を保存", class:"btn btn-primary" %>
</div>
<% end %>