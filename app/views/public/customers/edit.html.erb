
<h2>会員情報編集</h2>

<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました。
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @customer do |f| %>

  <div>名前</div>
  <div class="field">
    <%= f.label "(姓)" %><%= f.text_field :family_name %>
  </div>
  <div class="field">
    <%= f.label "(名)" %><%= f.text_field :first_name %>
  </div>

  <div>フリガナ</div>
  <div class="field">
    <%= f.label "(セイ)" %><%= f.text_field :family_name_kana %>
  </div>
  <div class="field">
    <%= f.label "(メイ)" %><%= f.text_field :first_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>

<% end %>
