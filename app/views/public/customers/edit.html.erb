<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="text-center">会員情報編集</h2>

      <% if @customer.errors.any? %>
        <div class="alert alert-danger">
          <%= @customer.errors.count %>件のエラーが発生しました。
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @customer do |f| %>
        <div class="form-group">
          <%= f.label :family_name, "名前(姓)" %>
          <%= f.text_field :family_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :first_name, "名前(名)" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :family_name_kana, "フリガナ(セイ)" %>
          <%= f.text_field :family_name_kana, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :first_name_kana, "フリガナ(メイ)" %>
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>

      <div class="text-center mt-4">
        <%= link_to "退会する", customer_unsubscribe_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>