<div class="container">

  <h1 class="m-4 text-center">マイページ</h1>

  <div class="m-4">

    <div class="d-flex m-2">
      <div class="col-3 text-left">名前</div>
      <div class="col-3 text-left"><%= @customer.family_name %><%= " " %><%= @customer.first_name %></div>
    </div>

    <div class="d-flex m-2">
      <div class="col-3 text-left">フリガナ</div>
      <div class="col-3 text-left"><%= @customer.family_name_kana %><%= " " %><%= @customer.first_name_kana %></div>
    </div>

    <div class="d-flex m-2">
      <div class="col-3 text-left">電話番号</div>
      <div class="col-3 text-left"><%= @customer.telephone_number %></div>
    </div>

    <div class="d-flex m-2">
      <div class="col-3 text-left">メールアドレス</div>
      <div class="col-3 text-left"><%= @customer.email %></div>
    </div>

    <div class="d-flex m-2">
      <div class="col-3 text-left">郵便番号</div>
      <div class="col-3 text-left"><%= @customer.postal_code %></div>
    </div>

    <div class="d-flex m-2">
      <div class="col-3 text-left">住所</div>
      <div class="col-3 text-left"><%= @customer.address %></div>
    </div>

  </div>

  <div class="m-3 text-center"><%= link_to "配送先を確認する", addresses_path %></div>

  <div class="m-3 text-center"><%= link_to "会員情報を編集する", edit_customer_path(@customer) %></div>

</div>