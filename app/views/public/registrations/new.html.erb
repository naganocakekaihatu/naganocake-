<h2 class="h3">新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :family_name, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :family_name, class: "form-control" %>
        </div>

        <%= f.label :first_name, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <%= f.label :family_name_kana, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :family_name_kana, class: "form-control" %>
        </div>

        <%= f.label :first_name_kana, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>

        <%= f.label :telephone_number, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>

        <%= f.label :email, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :postal_code, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>

        <%= f.label :address, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <%= f.label :password, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        </div>

        <%= f.label :password_confirmation, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div>
  <h2 class="h3">既に登録済みの方</h2>
  <%= link_to "こちら", new_customer_session_path, class: "btn btn-info" %>  からログインしてください。
</div>